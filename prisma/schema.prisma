// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id         String   @id @default(cuid())
  date       DateTime // Yalnız tarih mantığı için 00:00 TZ=Europe/Istanbul normalize edilerek kaydet
  slotStart  String   // "HH:mm"
  slotEnd    String   // "HH:mm"
  name       String
  phone      String
  note       String?       
  status     String   @default("PENDING") // PENDING, CONFIRMED, CANCELED
  createdAt  DateTime @default(now())

  @@unique([date, slotStart]) // çakışmayı engelle
  @@index([phone])
}

model OpeningHours {
  id          Int    @id @default(autoincrement())
  // 0=Sunday ... 6=Saturday (dayjs standardını seç; UI'de Türkçe gün isimleriyle göster)
  dow         Int    @unique
  openTime    String // "HH:mm"
  closeTime   String // "HH:mm"
  slotMinutes Int    // 60 veya 90 gibi
}

model BlockedSlot {
  id        String   @id @default(cuid())
  date      DateTime
  slotStart String   // "HH:mm"
  slotEnd   String   // "HH:mm"
  reason    String?

  @@index([date, slotStart])
}
